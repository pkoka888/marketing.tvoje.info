---
import { getCollection, type CollectionEntry } from 'astro:content';
import Layout from '../../layouts/Layout.astro';
import Header from '../../components/common/Header.astro';
import Footer from '../../components/common/Footer.astro';
import { getLangFromUrl, translations } from '../../i18n/translations';

export async function getStaticPaths() {
  const projects = await getCollection('projects');
  return projects.map((project: CollectionEntry<'projects'>) => ({
    params: { slug: project.slug },
    props: { project },
  }));
}

interface Props {
  project: CollectionEntry<'projects'>;
}

const { project } = Astro.props;
const lang = getLangFromUrl(Astro.url);
const t = translations[lang];

const { Content } = await project.render();
---

<Layout
  title={project.data.title}
  description={project.data.description}
  lang={lang}
  image={project.data.image}
>
  <Header slot="header" lang={lang} />

  <main>
    <!-- Hero -->
    <section
      class="relative h-[50vh] min-h-[400px] flex items-center justify-center overflow-hidden"
    >
      <div class="absolute inset-0 z-0">
        <img src={project.data.image} alt="" class="w-full h-full object-cover" />
        <div class="absolute inset-0 bg-gradient-to-r from-dark-900/90 to-dark-900/70"></div>
      </div>

      <div class="relative z-10 container mx-auto px-4 sm:px-6 lg:px-8 text-center">
        <div class="flex flex-wrap justify-center gap-2 mb-4">
          {
            project.data.tags.map((tag) => (
              <span class="px-3 py-1 text-sm font-medium rounded-full bg-primary-500/20 text-primary-300 border border-primary-500/30">
                {tag}
              </span>
            ))
          }
        </div>

        <h1 class="text-4xl md:text-5xl lg:text-6xl font-bold text-white mb-4">
          {project.data.title}
        </h1>

        <p class="text-xl text-gray-300 max-w-3xl mx-auto">
          {project.data.description}
        </p>
      </div>
    </section>

    <!-- Content -->
    <article class="py-16">
      <div class="container mx-auto px-4 sm:px-6 lg:px-8">
        <div class="max-w-4xl mx-auto">
          <!-- Stats -->
          {
            project.data.stats && (
              <div class="grid grid-cols-2 md:grid-cols-4 gap-4 mb-12">
                {project.data.stats.map((stat) => (
                  <div class="p-6 bg-gray-50 dark:bg-dark-800 rounded-xl text-center">
                    <div class="text-3xl font-bold text-primary-600 dark:text-primary-400 mb-1">
                      {stat.value}
                    </div>
                    <div class="text-sm text-gray-600 dark:text-gray-400">{stat.label}</div>
                  </div>
                ))}
              </div>
            )
          }

          <!-- Meta -->
          <div class="flex flex-wrap gap-6 mb-8 text-gray-600 dark:text-gray-400">
            {
              project.data.client && (
                <div class="flex items-center gap-2">
                  <svg
                    class="w-5 h-5"
                    fill="none"
                    stroke="currentColor"
                    viewBox="0 0 24 24"
                    aria-hidden="true"
                  >
                    <path
                      stroke-linecap="round"
                      stroke-linejoin="round"
                      stroke-width="2"
                      d="M19 21V5a2 2 0 00-2-2H7a2 2 0 00-2 2v16m14 0h2m-2 0h-5m-9 0H3m2 0h5M9 7h1m-1 4h1m4-4h1m-1 4h1m-5 10v-5a1 1 0 011-1h2a1 1 0 011 1v5m-4 0h4"
                    />
                  </svg>
                  <span>{project.data.client}</span>
                </div>
              )
            }
            {
              project.data.year && (
                <div class="flex items-center gap-2">
                  <svg
                    class="w-5 h-5"
                    fill="none"
                    stroke="currentColor"
                    viewBox="0 0 24 24"
                    aria-hidden="true"
                  >
                    <path
                      stroke-linecap="round"
                      stroke-linejoin="round"
                      stroke-width="2"
                      d="M8 7V3m8 4V3m-9 8h10M5 21h14a2 2 0 002-2V7a2 2 0 00-2-2H5a2 2 0 00-2 2v12a2 2 0 002 2z"
                    />
                  </svg>
                  <span>{project.data.year}</span>
                </div>
              )
            }
            {
              project.data.duration && (
                <div class="flex items-center gap-2">
                  <svg
                    class="w-5 h-5"
                    fill="none"
                    stroke="currentColor"
                    viewBox="0 0 24 24"
                    aria-hidden="true"
                  >
                    <path
                      stroke-linecap="round"
                      stroke-linejoin="round"
                      stroke-width="2"
                      d="M12 8v4l3 3m6-3a9 9 0 11-18 0 9 9 0 0118 0z"
                    />
                  </svg>
                  <span>{project.data.duration}</span>
                </div>
              )
            }
          </div>

          <!-- Main Content -->
          <div class="prose prose-lg dark:prose-invert max-w-none">
            <Content />
          </div>

          <!-- Back Link -->
          <div class="mt-12 pt-8 border-t border-gray-200 dark:border-dark-700">
            <a
              href={lang === 'cs' ? '/cs/projects' : '/projects'}
              class="inline-flex items-center text-primary-600 dark:text-primary-400 hover:text-primary-700 dark:hover:text-primary-300 transition-colors"
            >
              <svg
                class="w-5 h-5 mr-2"
                fill="none"
                stroke="currentColor"
                viewBox="0 0 24 24"
                aria-hidden="true"
              >
                <path
                  stroke-linecap="round"
                  stroke-linejoin="round"
                  stroke-width="2"
                  d="M10 19l-7-7m0 0l7-7m-7 7h18"></path>
              </svg>
              {t.common.back}
            </a>
          </div>
        </div>
      </div>
    </article>

    <!-- Contact CTA -->
    <section class="py-16 bg-gray-50 dark:bg-dark-800">
      <div class="container mx-auto px-4 sm:px-6 lg:px-8 text-center">
        <h2 class="text-3xl font-bold text-gray-900 dark:text-white mb-4">
          {lang === 'cs' ? 'Zajímá vás podobný projekt?' : 'Interested in a similar project?'}
        </h2>
        <p class="text-gray-600 dark:text-gray-300 mb-8 max-w-2xl mx-auto">
          {
            lang === 'cs'
              ? 'Kontaktujte mě a prodiskutujeme, jak vám mohu pomoci s vaší infrastrukturou.'
              : 'Contact me to discuss how I can help with your infrastructure needs.'
          }
        </p>
        <a href={lang === 'cs' ? '/cs#contact' : '/#contact'} class="btn-primary">
          {t.hero.secondaryCta}
        </a>
      </div>
    </section>
  </main>

  <Footer slot="footer" lang={lang} />
</Layout>
