---
import type { Language } from '../../i18n/translations';
import { getLangFromUrl } from '../../i18n/translations';

interface Props {
  lang?: Language;
}

const { lang: propLang } = Astro.props;
const lang = propLang || getLangFromUrl(Astro.url);
---

<section id="cta-video" class="relative py-20 overflow-hidden bg-dark-900 dark:bg-dark-900">
  <!-- Background -->
  <div class="absolute inset-0 bg-gradient-to-br from-primary-900/30 via-dark-900 to-accent-900/30">
  </div>
  <div
    class="absolute inset-0"
    style="background-image: url('data:image/svg+xml,%3Csvg width=\"
    60\"
    height='\"60\"'
    viewBox='\"0'
    0
    60
    60\"
    xmlns='\"http://www.w3.org/2000/svg\"%3E%3Cg'
    fill='\"none\"'
    fill-rule='\"evenodd\"%3E%3Cg'
    fill='\"%23ffffff\"'
    fill-opacity='\"0.03\"%3E%3Cpath'
    d='\"M36'
    34v-4h-2v4h-4v2h4v4h2v-4h4v-2h-4zm0-30V0h-2v4h-4v2h4v4h2V6h4V4h-4zM6
    34v-4H4v4H0v2h4v4h2v-4h4v-2H6zM6
    4V0H4v4H0v2h4v4h2V6h4V4H6z\"
    %3E%3C
    g%3E%3C
    g%3E%3C
    svg%3E');"
  >
  </div>

  <div class="container mx-auto px-4 sm:px-6 lg:px-8 relative z-10">
    <div class="max-w-4xl mx-auto text-center">
      <!-- Icon -->
      <div
        class="inline-flex items-center justify-center w-20 h-20 rounded-full bg-primary-500/20 mb-8"
      >
        <svg
          class="w-10 h-10 text-primary-400"
          fill="none"
          stroke="currentColor"
          viewBox="0 0 24 24"
        >
          <path
            stroke-linecap="round"
            stroke-linejoin="round"
            stroke-width="1.5"
            d="M15 10l4.553-2.276A1 1 0 0121 8.618v6.764a1 1 0 01-1.447.894L15 14M5 18h8a2 2 0 002-2V8a2 2 0 00-2-2H5a2 2 0 00-2 2v8a2 2 0 002 2z"
          ></path>
        </svg>
      </div>

      <!-- Heading -->
      <h2 class="text-3xl md:text-4xl font-bold text-white mb-4">
        {
          lang === 'cs'
            ? 'Ready to transform your marketing?'
            : 'Ready to Transform Your Marketing?'
        }
      </h2>

      <!-- Subtitle -->
      <p class="text-lg text-gray-300 mb-8 max-w-2xl mx-auto">
        {
          lang === 'cs'
            ? 'Podívejte se, jak jsme pomohli dalším firmám růst. Nebo rovnou začněme.'
            : 'See how we have helped other businesses grow. Or let us get started right away.'
        }
      </p>

      <!-- Buttons -->
      <div class="flex flex-col sm:flex-row gap-4 justify-center">
        <a
          href={lang === 'cs' ? '/cs#contact' : '/#contact'}
          class="btn-primary px-8 py-4 text-lg glow-primary"
        >
          {lang === 'cs' ? 'Začít spolupráci' : 'Start Collaboration'}
        </a>
        <a
          href={lang === 'cs' ? '/cs/projects' : '/projects'}
          class="btn-secondary px-8 py-4 text-lg border-white/30 text-white hover:bg-white/10"
        >
          {lang === 'cs' ? 'Zobrazit případové studie' : 'View Case Studies'}
        </a>
      </div>

      <!-- Trust badges -->
      <div class="mt-12 flex flex-wrap justify-center gap-8 text-sm text-gray-400">
        <div class="flex items-center gap-2">
          <svg class="w-5 h-5 text-green-400" fill="currentColor" viewBox="0 0 20 20">
            <path
              fill-rule="evenodd"
              d="M10 18a8 8 0 100-16 8 8 0 000 16zm3.707-9.293a1 1 0 00-1.414-1.414L9 10.586 7.707 9.293a1 1 0 00-1.414 1.414l2 2a1 1 0 001.414 0l4-4z"
              clip-rule="evenodd"></path>
          </svg>
          <span>{lang === 'cs' ? '50+ úspěšných projektů' : '50+ Successful Projects'}</span>
        </div>
        <div class="flex items-center gap-2">
          <svg class="w-5 h-5 text-green-400" fill="currentColor" viewBox="0 0 20 20">
            <path
              fill-rule="evenodd"
              d="M10 18a8 8 0 100-16 8 8 0 000 16zm3.707-9.293a1 1 0 00-1.414-1.414L9 10.586 7.707 9.293a1 1 0 00-1.414 1.414l2 2a1 1 0 001.414 0l4-4z"
              clip-rule="evenodd"></path>
          </svg>
          <span>{lang === 'cs' ? '99% spokojených klientů' : '99% Happy Clients'}</span>
        </div>
        <div class="flex items-center gap-2">
          <svg class="w-5 h-5 text-green-400" fill="currentColor" viewBox="0 0 20 20">
            <path
              fill-rule="evenodd"
              d="M10 18a8 8 0 100-16 8 8 0 000 16zm3.707-9.293a1 1 0 00-1.414-1.414L9 10.586 7.707 9.293a1 1 0 00-1.414 1.414l2 2a1 1 0 001.414 0l4-4z"
              clip-rule="evenodd"></path>
          </svg>
          <span>{lang === 'cs' ? '5+ let zkušeností' : '5+ Years Experience'}</span>
        </div>
      </div>
    </div>
  </div>
</section>
