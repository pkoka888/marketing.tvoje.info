---
import type { Language } from '../../i18n/translations';
import { getLangFromUrl, translations } from '../../i18n/translations';

interface Props {
  lang?: Language;
}

const { lang: propLang } = Astro.props;
const lang = propLang || getLangFromUrl(Astro.url);
const t = translations[lang];

const services = [
  {
    key: 'strategy',
    icon: `<svg class="w-8 h-8" fill="none" stroke="currentColor" viewBox="0 0 24 24"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="1.5" d="M9 19v-6a2 2 0 00-2-2H5a2 2 0 00-2 2v6a2 2 0 002 2h2a2 2 0 002-2zm0 0V9a2 2 0 012-2h2a2 2 0 012 2v10m-6 0a2 2 0 002 2h2a2 2 0 002-2m0 0V5a2 2 0 012-2h2a2 2 0 012 2v14a2 2 0 01-2 2h-2a2 2 0 01-2-2z" /></svg>`,
    title: t.services.strategy.title,
    description: t.services.strategy.description,
    items: t.services.strategy.items,
    color: 'primary',
    size: 'large', // spans 2 cols
  },
  {
    key: 'campaigns',
    icon: `<svg class="w-8 h-8" fill="none" stroke="currentColor" viewBox="0 0 24 24"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="1.5" d="M11 3.055A9.001 9.001 0 1020.945 13H11V3.055z" /><path stroke-linecap="round" stroke-linejoin="round" stroke-width="1.5" d="M20.488 9H15V3.512A9.025 9.025 0 0120.488 9z" /></svg>`,
    title: t.services.campaigns.title,
    description: t.services.campaigns.description,
    items: t.services.campaigns.items,
    color: 'accent',
    size: 'normal',
  },
  {
    key: 'consulting',
    icon: `<svg class="w-8 h-8" fill="none" stroke="currentColor" viewBox="0 0 24 24"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="1.5" d="M9 5H7a2 2 0 00-2 2v12a2 2 0 002 2h10a2 2 0 002-2V7a2 2 0 00-2-2h-2M9 5a2 2 0 002 2h2a2 2 0 002-2M9 5a2 2 0 012-2h2a2 2 0 012 2m-3 7h3m-3 4h3m-6-4h.01M9 16h.01" /></svg>`,
    title: t.services.consulting.title,
    description: t.services.consulting.description,
    items: t.services.consulting.items,
    color: 'purple',
    size: 'normal',
  },
];
---

<section id="services" class="section bg-white dark:bg-dark-900">
  <div class="container mx-auto px-4 sm:px-6 lg:px-8">
    <!-- Section Header -->
    <div class="text-center mb-16">
      <h2 class="section-title text-gray-900 dark:text-white">
        {t.services.title}
      </h2>
      <p class="text-lg text-gray-600 dark:text-gray-300 max-w-2xl mx-auto mt-4">
        {t.services.subtitle}
      </p>
    </div>
    
    <!-- Bento Grid -->
    <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-6 auto-rows-auto">
      {services.map((service, index) => (
        <div
          class={`bento-card group relative overflow-hidden rounded-2xl p-8 transition-all duration-500 hover:scale-[1.02] ${
            service.size === 'large' ? 'md:col-span-2 lg:col-span-2' : ''
          }`}
          data-aos="fade-up"
          data-aos-delay={index * 100}
        >
          <!-- Gradient Background -->
          <div class="absolute inset-0 bg-gradient-to-br from-primary-50 to-accent-50 dark:from-primary-900/20 dark:to-accent-900/20 opacity-0 group-hover:opacity-100 transition-opacity duration-500"></div>
          
          <!-- Content -->
          <div class="relative z-10">
            <!-- Icon -->
            <div class={`w-14 h-14 rounded-xl bg-${service.color}-100 dark:bg-${service.color}-900/30 flex items-center justify-center mb-5 text-${service.color}-600 dark:text-${service.color}-400 group-hover:scale-110 transition-transform duration-300`}>
              <Fragment set:html={service.icon} />
            </div>
            
            <!-- Title -->
            <h3 class="text-xl font-bold text-gray-900 dark:text-white mb-3">
              {service.title}
            </h3>
            
            <!-- Description -->
            <p class="text-gray-600 dark:text-gray-300 mb-5">
              {service.description}
            </p>
            
            <!-- Features List -->
            <ul class="space-y-2.5">
              {service.items.slice(0, 4).map((item) => (
                <li class="flex items-start gap-2.5">
                  <svg class="w-4 h-4 text-accent-500 flex-shrink-0 mt-0.5" fill="none" stroke="currentColor" viewBox="0 0 24 24" aria-hidden="true">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M5 13l4 4L19 7" />
                  </svg>
                  <span class="text-gray-600 dark:text-gray-400 text-sm">
                    {item}
                  </span>
                </li>
              ))}
            </ul>
            
            <!-- CTA -->
            <div class="mt-6 pt-5 border-t border-gray-200/50 dark:border-gray-700/50">
              <a
                href={lang === 'cs' ? '/cs#contact' : '/#contact'}
                class="inline-flex items-center text-sm font-medium text-primary-600 dark:text-primary-400 hover:text-primary-700 dark:hover:text-primary-300 transition-colors group/link"
              >
                {lang === 'cs' ? 'Zjistit v√≠ce' : 'Learn more'}
                <svg class="w-4 h-4 ml-1 transform group-hover/link:translate-x-1 transition-transform" fill="none" stroke="currentColor" viewBox="0 0 24 24" aria-hidden="true">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 5l7 7-7 7" />
                </svg>
              </a>
            </div>
          </div>
          
          <!-- Corner Accent -->
          <div class="absolute -top-4 -right-4 w-24 h-24 bg-gradient-to-bl from-primary-500/10 to-transparent rounded-full blur-2xl group-hover:scale-150 transition-transform duration-500"></div>
        </div>
      ))}
    </div>
  </div>
</section>
