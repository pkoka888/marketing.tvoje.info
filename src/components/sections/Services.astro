---
import type { Language } from '../../i18n/translations';
import { getLangFromUrl, translations } from '../../i18n/translations';

interface Props {
  lang?: Language;
}

const { lang: propLang } = Astro.props;
const lang = propLang || getLangFromUrl(Astro.url);
const t = translations[lang];

const services = [
  {
    key: 'aiCampaigns',
    icon: `<svg class="w-8 h-8" fill="none" stroke="currentColor" viewBox="0 0 24 24"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="1.5" d="M13 10V3L4 14h7v7l9-11h-7z" /></svg>`,
    title: t.services.aiCampaigns.title,
    description: t.services.aiCampaigns.description,
    items: t.services.aiCampaigns.items,
    result: t.services.aiCampaigns.result,
    color: 'primary',
    size: 'large',
  },
  {
    key: 'tiktokAds',
    icon: `<svg class="w-8 h-8" fill="none" stroke="currentColor" viewBox="0 0 24 24"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="1.5" d="M15 10l4.553-2.276A1 1 0 0121 8.618v6.764a1 1 0 01-1.447.894L15 14M5 18h8a2 2 0 002-2V8a2 2 0 00-2-2H5a2 2 0 00-2 2v8a2 2 0 002 2z" /></svg>`,
    title: t.services.tiktokAds.title,
    description: t.services.tiktokAds.description,
    items: t.services.tiktokAds.items,
    result: t.services.tiktokAds.result,
    color: 'accent',
    size: 'normal',
  },
  {
    key: 'automation',
    icon: `<svg class="w-8 h-8" fill="none" stroke="currentColor" viewBox="0 0 24 24"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="1.5" d="M4 4v5h.582m15.356 2A8.001 8.001 0 004.582 9m0 0H9m11 11v-5h-.581m0 0a8.003 8.003 0 01-15.357-2m15.357 2H15" /></svg>`,
    title: t.services.automation.title,
    description: t.services.automation.description,
    items: t.services.automation.items,
    result: t.services.automation.result,
    color: 'purple',
    size: 'normal',
  },
  {
    key: 'aiSearch',
    icon: `<svg class="w-8 h-8" fill="none" stroke="currentColor" viewBox="0 0 24 24"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="1.5" d="M21 21l-6-6m2-5a7 7 0 11-14 0 7 7 0 0114 0z" /></svg>`,
    title: t.services.aiSearch.title,
    description: t.services.aiSearch.description,
    items: t.services.aiSearch.items,
    result: t.services.aiSearch.result,
    color: 'primary',
    size: 'normal',
  },
];
---

<section id="services" class="section bg-white dark:bg-dark-900">
  <div class="container mx-auto px-4 sm:px-6 lg:px-8">
    <!-- Section Header -->
    <div class="text-center mb-16">
      <h2 class="section-title text-gray-900 dark:text-white">
        {t.services.title}
      </h2>
      <p class="text-lg text-gray-600 dark:text-gray-300 max-w-2xl mx-auto mt-4">
        {t.services.subtitle}
      </p>
    </div>

    <!-- Bento Grid -->
    <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-6 auto-rows-auto">
      {services.map((service, index) => (
        <div
          class={`bento-card group relative overflow-hidden rounded-2xl p-8 transition-all duration-500 hover:scale-[1.02] ${
            service.size === 'large' ? 'md:col-span-2 lg:col-span-2' : ''
          }`}
          data-aos="fade-up"
          data-aos-delay={index * 100}
        >
          <!-- Gradient Background -->
          <div class="absolute inset-0 bg-gradient-to-br from-primary-50 to-accent-50 dark:from-primary-900/20 dark:to-accent-900/20 opacity-0 group-hover:opacity-100 transition-opacity duration-500"></div>

          <!-- Content -->
          <div class="relative z-10">
            <!-- Icon -->
            <div class={`w-14 h-14 rounded-xl bg-${service.color}-100 dark:bg-${service.color}-900/30 flex items-center justify-center mb-5 text-${service.color}-600 dark:text-${service.color}-400 group-hover:scale-110 transition-transform duration-300`}>
              <Fragment set:html={service.icon} />
            </div>

            <!-- Title -->
            <h3 class="text-xl font-bold text-gray-900 dark:text-white mb-3">
              {service.title}
            </h3>

            <!-- Description -->
            <p class="text-gray-600 dark:text-gray-300 mb-5">
              {service.description}
            </p>

            <!-- Features List -->
            <ul class="space-y-2.5 mb-5">
              {service.items.slice(0, 4).map((item) => (
                <li class="flex items-start gap-2.5">
                  <svg class="w-4 h-4 text-accent-500 flex-shrink-0 mt-0.5" fill="none" stroke="currentColor" viewBox="0 0 24 24" aria-hidden="true">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M5 13l4 4L19 7" />
                  </svg>
                  <span class="text-gray-600 dark:text-gray-400 text-sm">
                    {item}
                  </span>
                </li>
              ))}
            </ul>

            <!-- Result Badge -->
            {service.result && (
              <div class="mb-5">
                <span class="inline-flex items-center gap-1 px-3 py-1 rounded-full bg-green-100 dark:bg-green-900/30 text-green-700 dark:text-green-300 text-xs font-semibold">
                  <svg class="w-3 h-3" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M13 7h8m0 0v8m0-8l-8 8-4-4-6 6" />
                  </svg>
                  {service.result}
                </span>
              </div>
            )}

            <!-- CTA -->
            <div class="mt-6 pt-5 border-t border-gray-200/50 dark:border-gray-700/50">
              <a
                href={lang === 'cs' ? '/cs#contact' : '/#contact'}
                class="inline-flex items-center text-sm font-medium text-primary-600 dark:text-primary-400 hover:text-primary-700 dark:hover:text-primary-300 transition-colors group/link"
              >
                {lang === 'cs' ? 'Získat nabídku' : 'Get a Quote'}
                <svg class="w-4 h-4 ml-1 transform group-hover/link:translate-x-1 transition-transform" fill="none" stroke="currentColor" viewBox="0 0 24 24" aria-hidden="true">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 5l7 7-7 7" />
                </svg>
              </a>
            </div>
          </div>

          <!-- Corner Accent -->
          <div class="absolute -top-4 -right-4 w-24 h-24 bg-gradient-to-bl from-primary-500/10 to-transparent rounded-full blur-2xl group-hover:scale-150 transition-transform duration-500"></div>
        </div>
      ))}
    </div>
  </div>
</section>
