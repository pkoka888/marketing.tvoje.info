---
import type { Language } from '../../i18n/translations';
import { getLangFromUrl, translations } from '../../i18n/translations';

interface Props {
  lang?: Language;
}

const { lang: propLang } = Astro.props;
const lang = propLang || getLangFromUrl(Astro.url);
const t = translations[lang];

const team = [
  {
    name: 'Pavel Kašpar',
    role: lang === 'cs' ? 'Zakladatel a marketingový strategista' : 'Founder & Marketing Strategist',
    bio: lang === 'cs' 
      ? '10+ let zkušeností s digitálním marketingem. Specializace na growth hacking a AI implementace.'
      : '10+ years of experience in digital marketing. Specializing in growth hacking and AI implementations.',
    photo: 'https://images.unsplash.com/photo-1472099645785-5658abf4ff4e?w=200&h=200&fit=crop',
    linkedin: 'https://linkedin.com/in/pavelkaspar'
  },
  {
    name: 'Jana Nováková',
    role: lang === 'cs' ? 'Senior SEO specialista' : 'Senior SEO Specialist',
    bio: lang === 'cs'
      ? 'Specialistka na technické SEO a optimalizaci pro vyhledávače. Certifikovaná Google partnerka.'
      : 'Technical SEO and search engine optimization specialist. Google Certified Partner.',
    photo: 'https://images.unsplash.com/photo-1494790108377-be9c29b29330?w=200&h=200&fit=crop',
    linkedin: 'https://linkedin.com/in/jananovakova'
  },
  {
    name: 'Martin Čermák',
    role: lang === 'cs' ? 'AI a automatizační inženýr' : 'AI & Automation Engineer',
    bio: lang === 'cs'
      ? 'Experti na machine learning a automatizaci marketingových procesů. Vývojář Python a Node.js.'
      : 'Machine learning and marketing automation expert. Python and Node.js developer.',
    photo: 'https://images.unsplash.com/photo-1507003211169-0a1dd7228f2d?w=200&h=200&fit=crop',
    linkedin: 'https://linkedin.com/in/martincermak'
  }
];

const sectionTitle = t.team?.title || (lang === 'cs' ? 'Náš tým' : 'Our Team');
---

<section id="team" class="section bg-gray-50 dark:bg-dark-800">
  <div class="container mx-auto px-4 sm:px-6 lg:px-8">
    <div class="text-center mb-16">
      <h2 class="section-title text-gray-900 dark:text-white">
        {sectionTitle}
      </h2>
    </div>

    <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-8">
      {team.map((member, index) => (
        <div
          class="glass-card p-6 flex flex-col items-center text-center"
          data-aos="fade-up"
          data-aos-delay={index * 100}
        >
          <img
            src={member.photo}
            alt={member.name}
            class="w-24 h-24 rounded-full object-cover mb-4"
            loading="lazy"
          />
          <h3 class="font-bold text-lg text-gray-900 dark:text-white mb-1">
            {member.name}
          </h3>
          <p class="text-primary-600 dark:text-primary-400 text-sm mb-3">
            {member.role}
          </p>
          <p class="text-gray-600 dark:text-gray-400 text-sm line-clamp-2 mb-4">
            {member.bio}
          </p>
          {member.linkedin && (
            <a
              href={member.linkedin}
              target="_blank"
              rel="noopener noreferrer"
              class="inline-flex items-center gap-2 text-gray-500 hover:text-primary-600 dark:text-gray-400 dark:hover:text-primary-400 transition-colors"
              aria-label={`${member.name} LinkedIn`}
            >
              <svg class="w-5 h-5" fill="currentColor" viewBox="0 0 24 24" aria-hidden="true">
                <path d="M20.447 20.452h-3.554v-5.569c0-1.328-.027-3.037-1.852-3.037-1.853 0-2.136 1.445-2.136 2.939v5.667H9.351V9h3.414v1.561h.046c.477-.9 1.637-1.85 3.37-1.85 3.601 0 4.267 2.37 4.267 5.455v6.286zM5.337 7.433c-1.144 0-2.063-.926-2.063-2.065 0-1.138.92-2.063 2.063-2.063 1.14 0 2.064.925 2.064 2.063 0 1.139-.925 2.065-2.064 2.065zm1.782 13.019H3.555V9h3.564v11.452zM22.225 0H1.771C.792 0 0 .774 0 1.729v20.542C0 23.227.792 24 1.771 24h20.451C23.2 24 24 23.227 24 22.271V1.729C24 .774 23.2 0 22.222 0h.003z"/>
              </svg>
              <span class="text-sm">LinkedIn</span>
            </a>
          )}
        </div>
      ))}
    </div>
  </div>
</section>
