---
interface Props {
  variant?: 'default' | 'elevated' | 'outlined';
  padding?: 'none' | 'sm' | 'md' | 'lg';
  hover?: boolean;
  class?: string;
}

const {
  variant = 'default',
  padding = 'md',
  hover = false,
  class: className = '',
} = Astro.props;

const variantClasses = {
  default: 'bg-white dark:bg-dark-800',
  elevated: 'bg-white dark:bg-dark-800 shadow-lg dark:shadow-dark-1100',
  outlined: 'bg-white dark:bg-dark-800 border border-gray-200 dark:border-dark-600',
};

const paddingClasses = {
  none: '',
  sm: 'p-4',
  md: 'p-6',
  lg: 'p-8',
};

const allClasses = `${variantClasses[variant]} ${paddingClasses[padding]} ${hover ? 'transition-all duration-300 hover:shadow-xl dark:hover:shadow-dark-1100' : ''} ${className}`;
---

<div class={allClasses}>
  <slot />
</div>
