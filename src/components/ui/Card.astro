---
interface Props {
  variant?: 'default' | 'elevated' | 'outlined' | 'glass';
  padding?: 'none' | 'sm' | 'md' | 'lg';
  hover?: boolean;
  class?: string;
}

const {
  variant = 'default',
  padding = 'md',
  hover = false,
  class: className = '',
} = Astro.props;

const variantClasses = {
  default: 'bg-white dark:bg-dark-800',
  elevated: 'bg-white dark:bg-dark-800 shadow-lg dark:shadow-dark-1100',
  outlined: 'bg-white dark:bg-dark-800 border border-gray-200 dark:border-dark-600',
  glass: 'bg-white/70 dark:bg-dark-800/70 backdrop-blur-md border border-white/20 dark:border-dark-700/30',
};

const paddingClasses = {
  none: '',
  sm: 'p-4',
  md: 'p-6',
  lg: 'p-8',
};

const hoverClasses = hover ? 'transition-all duration-300 hover:shadow-xl dark:hover:shadow-dark-1100 hover:-translate-y-1' : '';

const allClasses = `${variantClasses[variant]} ${paddingClasses[padding]} ${hoverClasses} rounded-xl ${className}`;
---

<div class={allClasses}>
  <slot />
</div>
