#!/bin/bash
#
# Pre-commit hook for marketing.tvoje.info
# Validates code before allowing commit
#
# Install: cp scripts/pre-commit .git/hooks/pre-commit

set -e

# Colors
RED='\033[0;31m'
GREEN='\033[0;32m'
YELLOW='\033[1;33m'
NC='\033[0m'

echo "========================================"
echo "Running Pre-Commit Checks"
echo "========================================"
echo ""

# Track if any check fails
FAILED=0

# ============================================
# Check 1: No secrets in code
# ============================================
echo "Check 1: Scanning for secrets..."
if grep -r "sk-[a-zA-Z0-9]" src/ --include="*.js" --include="*.ts" --include="*.astro" 2>/dev/null | grep -v "node_modules"; then
    echo -e "${RED}❌ Found potential API keys in source code${NC}"
    FAILED=1
else
    echo -e "${GREEN}✅ No secrets found in source code${NC}"
fi

# ============================================
# Check 2: No console.log in production code
# ============================================
echo ""
echo "Check 2: Checking for console.log statements..."
if grep -r "console.log" src/ --include="*.js" --include="*.ts" --include="*.astro" 2>/dev/null | grep -v "// console.log" | head -5; then
    echo -e "${YELLOW}⚠️  Found console.log statements (consider removing for production)${NC}"
    # Don't fail, just warn
else
    echo -e "${GREEN}✅ No console.log statements found${NC}"
fi

# ============================================
# Check 3: JSON files are valid
# ============================================
echo ""
echo "Check 3: Validating JSON files..."
for file in $(find . -name "*.json" -not -path "./node_modules/*" -not -path "./.git/*" 2>/dev/null | head -20); do
    if ! python3 -m json.tool "$file" > /dev/null 2>&1; then
        echo -e "${RED}❌ Invalid JSON: $file${NC}"
        FAILED=1
    fi
done
echo -e "${GREEN}✅ JSON files are valid${NC}"

# ============================================
# Check 4: YAML files are valid
# ============================================
echo ""
echo "Check 4: Validating YAML files..."
if command -v python3 &> /dev/null; then
    for file in $(find . -name "*.yml" -o -name "*.yaml" 2>/dev/null | grep -v node_modules | head -20); do
        if ! python3 -c "import yaml; yaml.safe_load(open('$file'))" 2>/dev/null; then
            echo -e "${RED}❌ Invalid YAML: $file${NC}"
            FAILED=1
        fi
    done
    echo -e "${GREEN}✅ YAML files are valid${NC}"
else
    echo -e "${YELLOW}⚠️  Python3 not available, skipping YAML validation${NC}"
fi

# ============================================
# Check 5: Docker Compose syntax
# ============================================
echo ""
echo "Check 5: Validating Docker Compose files..."
if docker-compose -f docker-compose.dev.yml config > /dev/null 2>&1; then
    echo -e "${GREEN}✅ docker-compose.dev.yml is valid${NC}"
else
    echo -e "${RED}❌ docker-compose.dev.yml has errors${NC}"
    FAILED=1
fi

if docker-compose -f docker-compose.prod.yml config > /dev/null 2>&1; then
    echo -e "${GREEN}✅ docker-compose.prod.yml is valid${NC}"
else
    echo -e "${RED}❌ docker-compose.prod.yml has errors${NC}"
    FAILED=1
fi

# ============================================
# Check 6: Line endings (CRLF check)
# ============================================
echo ""
echo "Check 6: Checking line endings..."
CRLF_FILES=$(find scripts/ -name "*.sh" -exec file {} \; 2>/dev/null | grep "CRLF" | wc -l)
if [ "$CRLF_FILES" -gt 0 ]; then
    echo -e "${YELLOW}⚠️  Found CRLF line endings in shell scripts${NC}"
    echo "Run: dos2unix scripts/*.sh"
    # Don't fail, just warn
else
    echo -e "${GREEN}✅ No CRLF line endings found${NC}"
fi

# ============================================
# Check 7: File permissions
# ============================================
echo ""
echo "Check 7: Checking script permissions..."
for script in scripts/*.sh; do
    if [ -f "$script" ] && [ ! -x "$script" ]; then
        echo -e "${YELLOW}⚠️  $script is not executable${NC}"
        chmod +x "$script"
        echo "   Fixed: chmod +x $script"
    fi
done
echo -e "${GREEN}✅ Script permissions OK${NC}"

# ============================================
# Summary
# ============================================
echo ""
echo "========================================"

if [ $FAILED -eq 0 ]; then
    echo -e "${GREEN}✅ ALL CHECKS PASSED${NC}"
    echo "Proceeding with commit..."
    exit 0
else
    echo -e "${RED}❌ SOME CHECKS FAILED${NC}"
    echo "Please fix the issues above before committing."
    echo ""
    echo "To bypass (not recommended):"
    echo "  git commit --no-verify"
    exit 1
fi
