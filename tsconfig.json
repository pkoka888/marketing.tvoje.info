{
  "extends": "astro/tsconfigs/strict",
  "compilerOptions": {
    "baseUrl": ".",
    "paths": {
      "@/*": ["src/*"],
      "@components/*": ["src/components/*"],
      "@layouts/*": ["src/layouts/*"],
      "@pages/*": ["src/pages/*"],
      "@styles/*": ["src/styles/*"],
      "@i18n/*": ["src/i18n/*"],
      "@content/*": ["src/content/*"]
    },
    "jsx": "preserve",
    "jsxImportSource": "astro"
  },
  "include": ["src/**/*", "env.d.ts"],
  "exclude": ["node_modules", "dist", "build"]
}
